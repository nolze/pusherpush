doctype html
html
  head
    title ##{roomId} - PusherPush
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css", integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M", crossorigin="anonymous")
    link(rel='stylesheet', href='/css/bootstrap-colorpicker.min.css')
    link(rel='stylesheet', href='/css/jqdialog.css')
    link(rel='stylesheet', href='/css/index.css')
    script(src='/socket.io/socket.io.js')
    script(src='http://code.jquery.com/jquery.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js", integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4", crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js", integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1", crossorigin="anonymous")
    script(src='/js/bootstrap-colorpicker.min.js')
    script(src='/js/common.js')
    script(src='/js/player.js')
  body
    .title
      h1 PusherPush
      h1 ##{roomId}
    .container.d-flex.main
      .row
        .col-sm-6#col-button
          .card
            .card-body.card-button
              div(style='width:100%;')
                div(style='width:300px;margin:0 auto;')
                  a#push-button.button(href='#', style='margin:0 auto;')
        .col-sm-6#col-control
          .card.align-middle(style="width: 342px;")
            .card-body
              ul#pills-tab.nav.nav-pills.mb-3(role='tablist')
                li.nav-item(style="margin-right: 0.35rem;")
                  input.form-control#username(type='text', placeholder='名前', style='width:196px;', required='')
                li.nav-item
                  a#pills-config-tab.nav-link.btn.btn-outline-primary(data-toggle="pill" href='#pills-config', role='tab', aria-controls='pills-config', aria-expanded='true') 詳細設定
                li.nav-item(style="display: none")
                  a#pills-home-tab.nav-link.btn.btn-primary(data-toggle="pill" href='#pills-home', role='tab', aria-controls='pills-home', aria-expanded='true') 詳細設定
              #pills-tabContent.tab-content
                #pills-home.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='pills-home-tab')
                  div
                    table.table.table-sm#point
                      thead
                        tr
                          th
                          th ○
                          th ×
                      tbody
                #pills-config.tab-pane.fade(role='tabpanel', aria-labelledby='pills-config-tab')
                  #cp2.input-group.colorpicker-component
                    input.form-control(type='text', value='#00AABB')
                    span.input-group-addon
                      i
